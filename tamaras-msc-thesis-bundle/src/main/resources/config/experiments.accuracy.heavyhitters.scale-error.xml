    <!-- accuracy experiment on 20 nodes with 10B total elements per node & pareto distribution -->
    <!--Fix the fraction to 0.001 and vary error-->
    <bean id="accuracy.scale-error.heavy.hitter.pareto.fraction.0.001" class="eu.stratosphere.peel.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list value-type="eu.stratosphere.peel.core.beans.experiment.Experiment">

                <!--Error = Fraction-->
                <bean parent="heavy.hitters">
                    <constructor-arg name="name" value="real.heavy.hitters.error.equals.fraction"/>
                    <constructor-arg name="config">
                        <value>
                            # common system parameters
                            system.default.config.parallelism.total = 160
                            system.default.config.slaves = ${env.hosts.slaves.only20}
                            # experiment parameters
                            operator.stats.fraction = 0.001
                            operator.stats.error = 0.001
                            operator.stats.cardinality = 10000000000
                            # datagen parameters
                            datagen.path = 10B
                            datagen.tuples.per.task = 250000000
                            datagen.distribution = "TruncIntPareto[1,100000]"
                        </value>
                    </constructor-arg>
                </bean>
                <bean parent="heavy.hitter.flatmap.with.local.stats.collection">
                    <constructor-arg name="name" value="lossy.error.equals.fraction"/>
